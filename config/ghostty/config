font-size = 16
font-family = BerkeleyMono Nerd Font Mono
font-style = Medium
font-thicken = false
adjust-cell-width = -1
bold-is-bright = true
auto-update = check

# fallback font to show nerd icons
# if your font build has problems
# font-family = JetBrainsMono Nerd Font Mono

theme = kanagawa-dragon
macos-titlebar-proxy-icon = hidden
# add this if you want to use native tabs (without color scheme match)
# macos-titlebar-style = native

shell-integration-features = no-cursor
cursor-style = block
cursor-style-blink = false
mouse-hide-while-typing = true

copy-on-select = clipboard
quit-after-last-window-closed = true

window-width = 400
window-height = 99
window-colorspace = display-p3

window-save-state = always

keybind = ctrl+f>c=new_tab

keybind = shift+tab=next_tab
keybind = ctrl+tab=previous_tab
keybind = super+r=reload_config

keybind = ctrl+w>h=goto_split:left
keybind = ctrl+w>j=goto_split:bottom
keybind = ctrl+w>k=goto_split:top
keybind = ctrl+w>l=goto_split:right

keybind = ctrl+f>h=new_split:left
keybind = ctrl+f>j=new_split:down
keybind = ctrl+f>k=new_split:up
keybind = ctrl+f>l=new_split:right
keybind = ctrl+f>t=new_split:right

keybind = shift+enter=text:\n

keybind = ctrl+f>g>g=scroll_to_top
keybind = ctrl+f>shift+g=scroll_to_bottom
